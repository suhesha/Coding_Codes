%macro display 2
mov edx,%2
mov ecx,%1
mov ebx,1
mov eax,4
int 80h
%endmacro
%macro read 2
mov edx,%2
mov ecx,%1
mov ebx,0
mov eax,3
int 80h
%endmacro
section .data
msg1 db 10,&quot;Enter element to be searched : &quot;
len1 equ $-msg1
msg11 db 10,&quot;The array contains the elements&quot;,10,13
msglen11 equ $-msg11
msg2 db 10,&quot;The element is present in array at position : &quot;,10
len2 equ $-msg2
msg3 db 10,&quot;The element is not present in array&quot;,10
len3 equ $-msg3
array db 10h,15h,25h,30h,35h
newline db 10
space db &#39; &#39;
section .bss
num1 resb 3
temp resb 1
pos resb 1
counter resb 1
counter2 resb 1
result resb 4
section .text
global _start
_start: display msg11,msglen11
mov byte[counter],05
mov esi,array
next: mov al,[esi]
push esi
call disp
pop esi
inc esi
dec byte[counter]
jnz next
display msg1,len1
read num1,3
call convert
mov [temp],bl
xor eax,eax
xor ebx,ebx
mov al,00h
mov bl,04h
up: mov esi,array
xor edx,edx
mov dl,al
xor eax,eax
mov al,dl
add al,bl
xor edx,edx
mov dl,02h
div dl
xor ecx,ecx
mov cl,al
add esi,ecx
xor edx,edx
mov dl,[temp]
cmp dl,[esi]
je go1
jb go2
add al,01h
jmp under
go2: xor ebx,ebx
mov bl,al
dec bl
xor eax,eax
mov al,00h
jmp under
go1: inc al
add al,30h
mov [pos],al
display msg2,len2
display pos,1
display newline,1
jmp exit
under: js low
cmp al,bl
jbe up
low: display msg3,len3
display newline,1
exit: mov eax,1
mov ebx,0
int 80h
convert: mov edi,num1
xor ecx,ecx
mov cl,02h
xor ebx,ebx
above: rol bl,04
mov al,[edi]
cmp al,39h
jbe below
sub al,07h
below: sub al,30h
add bl,al
inc edi
loop above
ret
disp: mov bl,al
mov edi,result
mov cx,02
again: rol bl,4
mov al,bl
and al,0fh
cmp al,09
jg down
add al,30h
jmp skip1
down: add al,37h
skip1: mov[edi],al
inc edi
dec cx
jnz again
display result,2
display space,2
ret




%macro user_input 2
mov edx,%2
mov ecx,%1
mov ebx,0
mov eax,3
int 80h
%endmacro
%macro display 2
mov edx,%2
mov ecx,%1
mov ebx,1
mov eax,4
int 80h
%endmacro
section .data
msg11 db 10,&quot;The array contains the elements&quot;,10,13
msglen11 equ $-msg11
msg12 db 10,&quot;Enter element to be searched&quot;,10,13
msglen12 equ $-msg12
msg1 db 10,&quot;The element is present in the array at position : &quot;,10
len1 equ $-msg1
msg2 db 10,&quot;The element is not present in the array&quot;,10
len2 equ $-msg2
array db 14h,10h,19h,25h,01h
pos db 01h
newline db 10
space db &#39; &#39;
section .bss
item resb 1
temp resb 1
temp2 resb 2
counter resb 1
counter2 resb 1
result resb 4
section .text
global _start
_start: display msg11,msglen11
mov byte[counter],05
mov esi,array
next111:mov al,[esi]
push esi
call disp
pop esi
inc esi
dec byte[counter]
jnz next111
display msg12,msglen12
user_input item,2
call convert
call linear_search
mov eax,1
mov ebx,0
int 80h
linear_search:
xor ecx,ecx
mov cl,05h
mov esi,array
up2: xor ebx,ebx
mov bl,[esi]
cmp [temp],bl
jz next2
inc esi
inc byte[pos]
loop up2
display msg2,len2
ret
next2: display msg1,len1
call convert2
display temp2,2
display newline,1
ret
convert:
xor eax,eax
xor ebx,ebx
xor ecx,ecx
mov esi,item
mov cl,02h
mov bl,00h
up: rol bl,04h
mov al,[esi]
cmp al,39h
jbe next
sub al,07h
next: sub al,30h
add bl,al
inc esi
loop up
mov [temp],bl
ret
convert2:
mov esi,pos
mov edi,temp2
mov cl,02h
mov bl,[esi]
up1: rol bl,04h
mov al,bl
and al,0fh
cmp al,09h
jbe next1
add al,07h
next1: add al,30h
mov [edi],al
inc edi
loop up1
ret
disp: mov bl,al
mov edi,result
mov cx,02
again: rol bl,4
mov al,bl
and al,0fh
cmp al,09
jg down
add al,30h
jmp skip1
down: add al,37h
skip1: mov[edi],al
inc edi
dec cx
jnz again
display result,2
display space,2
ret
