section .data
msg db "***  basic mathematical operations ***"
len equ $ -msg
msg1 db 10,13,"sum:"
len1 equ $ -msg1

section .bss
reg resb 1

section .text
global _start
_start:
;display the string msg
mov ecx,msg
mov edx,len
mov ebx,1
mov eax,4
int 80h

;display the string msg1
mov ecx,msg1
mov edx,len1
mov ebx,1
mov eax,4
int 80h

;****addition****
mov ax,'6'
sub ax,'0'
mov bl,'2'
sub bl,'0'
sum:mov eax,ecx
add eax,edx
add eax,'0'
mov[reg],eax
;display sum
mov ecx,sum
mov edx,1
mov ebx,1
mov eax,4
int 80h
